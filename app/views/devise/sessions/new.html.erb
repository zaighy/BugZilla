<h2 align="center" >Log in</h2>
<div class="row">
  <div class="col-xs-12">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal", role: "form"}) do |f| %>
      <hr>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :email %>
        </div>
        <div class="col-sm-8">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'name@example.com', class: "form-control"%>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :password %>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <div class="form-check">
            <span class="col-sm-2"></span>
            <div class="col-sm-8">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, class: "form-check-label" %>
            </div>
          </div>
        </div>
      <% end -%>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Log in", class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>

    <hr>
    <div class="form-horizontal ">
      <div class="form-group">
        <div class="control-label col-sm-2">
          <label>New User?</label>
        </div>
        <div class="col-sm-8">
          <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-success btn-md' %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <label>Forgot Password?</label>
        </div>
        <div class="col-sm-8">
          <%= link_to "Recover Account", new_password_path(resource_name), class: 'btn btn-success btn-md' %>
        </div>
      </div>
    </div>

    <div class="col-xs-4 col-xs-offset-5">
      [ <%= link_to "Cancel and return to Projects", projects_path %> ]
    </div>

  </div>
</div>

